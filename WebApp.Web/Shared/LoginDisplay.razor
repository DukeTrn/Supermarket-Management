@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Xin chào, @context.User.Identity.Name!</a>
        <form action="/Identity/Account/Logout?returnUrl=%2F" method="post">
            <button type="submit" class="nav-link btn btn-link">Đăng xuất</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Đăng kí</a>
        <a href="Identity/Account/Login">Đăng nhập</a>
    </NotAuthorized>
</AuthorizeView>
